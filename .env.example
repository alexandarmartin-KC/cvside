# Database
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# NextAuth (if keeping OAuth providers)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Custom Password Authentication
AUTH_SECRET="your-secure-random-secret-min-32-chars"

# Application URL (used in password reset emails)
APP_URL="http://localhost:3000"
# Production: APP_URL="https://your-app.vercel.app"

# Email Service (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxxx"
EMAIL_FROM="noreply@yourdomain.com"

# Google OAuth (optional, if keeping NextAuth)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Provider (optional, if keeping NextAuth email)
EMAIL_SERVER="smtp://username:password@smtp.example.com:587"
